#include <stdio.h>
#include <conio.h>
void main(){
    int arr1[10][10],arr2[10][10],result[10][10];
    int r1, r2, c1, c2;
    printf("For first array Enter number of rows and col : ");
    scanf("%d %d",&r1 ,&c1);
    printf("For Second array Enter number of rows and col : ");
    scanf("%d %d",&r2 ,&c2);

    while(r1 != c2){
        printf("Error !!!! . First array rows and second array coloumn have to be equal");
            printf("For first array Enter number of rows and col : ");
            scanf("%d %d",&r1 ,&c1);
            printf("For Second array Enter number of rows and col : ");
            scanf("%d %d",&r2 ,&c2);
    }

    //arr1 input
        for(int i=0;i<r1;i++){

              for(int j=0;j<c1;j++){
                printf("arr1[%d][%d]: ",i ,j);
                scanf("%d",&arr1[i][j]);
            }
            printf("\n");
        }
        printf("\nArray 2:\n");
        for(int i=0;i<r2;i++){

              for(int j=0;j<c2;j++){
                printf("arr2[%d][%d]: ",i ,j);
                scanf("%d",&arr2[i][j]);
            }
            printf("\n");
        }
    //output of 2D array1
        printf("array1 :\n");
        for(int i=0;i<r1;i++){
                printf("\tRow %d: ",i);
            for(int j=0;j<c1;j++){
                printf("%d ",arr1[i][j]);
            }
            printf("\n");
        }

        printf("array2 :\n");
        for(int i=0;i<r2;i++){
                printf("\tRow %d: ",i);
            for(int j=0;j<c2;j++){
                printf("%d ",arr2[i][j]);
            }
            printf("\n");
        }
    //array multiplication

        for(int i=0;i<r1;i++){
            for(int j=0;j<c2;j++){
                    result[i][j]=0;
                for(int k=0;k<c1;k++){
                    result[i][j] +=  arr1[i][k] * arr2[k][j];
                }
            }
        }
    //multiplied array result printing
    printf("array1*array2:\n");
    for(int i=0;i<r1;i++){
            printf("\t");
        for(int j=0;j<c2;j++){
            printf("%d ",result[i][j]);
        }
        printf("\n");
    }

    getch();
}
