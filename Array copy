#include <stdio.h>

void main(){
    int arr1[100],arr2[100];
    int n;
    printf("how many number will input into arrray:");
    scanf("%d",&n);
    printf("Enter %d numbers: ",n);
    for(int i=0;i<n;i++){
        scanf("%d",&arr1[i]);
    }

    printf("array 1 is: ");
    for(int i=0;i<n;i++){
        printf("%d ",arr1[i]);
    }

    //array coping
    for(int i=0;i<n;i++){
        arr2[i] = arr1[i];
    }

    printf("\narray 2 :");
    for(int i=0;i<n;i++){
        printf("%d ",arr2[i]);
    }
    getch();
}
