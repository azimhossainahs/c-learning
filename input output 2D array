#include <stdio.h>

void main(){
    int arr1[3][4];
        printf("3*4 Matrix\n");

        //get 2D input
        for(int i=0;i<3;i++){

              for(int j=0;j<4;j++){
                printf("arr1[%d][%d]: ",i ,j);
                scanf("%d",&arr1[i][j]);
            }
            printf("\n");
        }
        //output of 2D array
        printf("array1 :\n");
        for(int i=0;i<3;i++){
                printf("\tRow %d: ",i);
            for(int j=0;j<4;j++){
                printf("%d ",arr1[i][j]);
            }
            printf("\n");
        }

    getchar();
}
